<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://extServersDetailView.title"
      focusComponent="form">
    <data>
        <instance id="extServersDc"
                  class="com.itbm.logcentr.entity.ExtServers">
            <fetchPlan extends="_base"/>
            <loader id="extServersDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
<!--        <action id="pingButton" type="pingButton"/>-->
    </actions>
    <layout>
        <formLayout id="form" dataContainer="extServersDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <vbox>
                <textField id="nameField" property="name" width="75%"/>
                <hbox>
                    <textField id="hostField" property="host" label="Адрес сервера" width="50%"/>
                    <textField id="portField" property="port" label="Порт" width="50%"/>
                </hbox>
                <hbox >
                    <textField id="loginField" property="login" label="Логин"/>
                    <textField id="passwordField" property="password" label="Пароль"/>
                </hbox>
                <button id="pingButton" icon="PLAY" text="Проверить подключение"/>
                <hbox>
                    <comboBox id="dbNameField" property="dbname" label="База данных"/>
                    <comboBox id="table_nameField" property="table_name" label="Таблица"/>
                </hbox>
            </vbox>

        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>

        </hbox>
    </layout>
</view>
